<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37A754">

    <ImageView
        android:id="@+id/play_title"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/play_screen_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/mary_icon"
                android:layout_width="342dp"
                android:layout_height="167dp"
                android:layout_gravity="center"
                android:src="@drawable/mary_icon"
                android:onClick="jumpToSong"/>

            <ImageView
                android:id="@+id/joy_icon"
                android:layout_width="342dp"
                android:layout_height="167dp"
                android:layout_gravity="center"
                android:src="@drawable/joy_icon"
                android:onClick="jumpToSong"/>

            <ImageView
                android:id="@+id/baby_icon"
                android:layout_width="342dp"
                android:layout_height="167dp"
                android:layout_gravity="center"
                android:src="@drawable/baby_icon"
                android:onClick="jumpToSong"/>

            <ImageView
                android:id="@+id/itsy_icon"
                android:layout_width="342dp"
                android:layout_height="167dp"
                android:layout_gravity="center"
                android:src="@drawable/itsy_icon"
                android:onClick="jumpToSong"/>

            <ImageView
                android:id="@+id/row_icon"
                android:layout_width="342dp"
                android:layout_height="167dp"
                android:layout_gravity="center"
                android:src="@drawable/row_icon"
                android:onClick="jumpToSong"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>